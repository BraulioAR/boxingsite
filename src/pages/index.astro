---
import { SUPPORTED_MARKDOWN_FILE_EXTENSIONS } from "astro/dist/core/constants";
---

<html lang="e">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<title>Boxing Event</title>
	</head>
	<body>
		<header class="relative">
			<div class="absolute left-1/2 -translate-x-1/2 z-10 flex flex-col gap-1 justify-center items-center top-8">
				<img
				class="w-32 lg:w-64 h-auto animate-rotate-y animate-once animate-duration-1000 animate-ease-in animate-alternate-reverse"
				alt="Logo de la Velada"
				src='/logo.webp'
				/>
				<h1 class="font-boxing text-5xl uppercase text-center text-white font-bold">
					<span 
					class="bg-clip-text text-transparent bg-gradient-to-b from-white via-gray-200 to-white
					inline-block leading-relaxed">Boxing Event</span> 
				<span class="text-yellow-300">III</span>
			</h1>
			</div>
		</header>

		<main> 
			<section 
			id="boxers"
			class={`flex justify-between relative
			[&>div>img]:absolute [&>div>img]:bottom-0
			[&>div>img]:w-auto
			[&>div>img]:animate-duration-1000 [&>div>img]:animate-ease-in-out
			h-[40vh] lg:h-screen pt-24 border-b border-white/10
			`}
			>
			<div class="absolute inset-0 bg-[radial-gradient(ellipse_at_center,_var(--tw-gradient-stops))] from-[#131313] via-zinc-900 to-zinc-950"></div>
				<div class="relative w-full ">
					<img class=" coscu left-0 h-[100%] z-50 animate-fade-right" src="/boxers/coscu.webp" alt="Coscu">
					<img class=" mayichi left-[5%] h-[80%] z-40 animate-fade-right animate-delay-300"  src="/boxers/mayichi.webp" alt="Mayichi">
					<img class=" viruzz left-[15%] h-[75%] z-30 animate-fade-right animate-delay-500" src="/boxers/viruzz.webp" alt="Viruzz">
					<img class=" fernan left-[28%] h-[70%] z-20 animate-fade-right animate-delay-700" src="/boxers/fernanfloo.webp" alt="Fernanfloo">
					<img class=" larivers left-[37%] h-[68%] z-10 animate-fade-right animate-delay-1000" src="/boxers/la-rivers.webp" alt="La Rivers">
					<img class=" papigavi left-[42%] h-[62%] z-0 animate-fade-right animate-delay-[1300ms]" src="/boxers/papigavi.webp" alt="Papi Gavi">
				</div>
				<div class="relative w-full">
					<img class="german right-0 h-[100%] z-50 animate-fade-left" src="/boxers/german.webp" alt="German">
					<img class="amouranth right-[5%] h-[80%] z-40 animate-fade-left animate-delay-300"  src="/boxers/amouranth.webp" alt="Amouranth">
					<img class="shelao right-[15%] h-[76%] z-30 animate-fade-left animate-delay-500" src="/boxers/shelao.webp" alt="Shelao">
					<img class="luzu right-[28%] h-[71%] z-20 animate-fade-left animate-delay-700" src="/boxers/luzu.webp" alt="Luzu">
					<img class="rivers right-[37%] h-[68%] z-10 animate-fade-left animate-delay-1000" src="/boxers/rivers.webp" alt="Rivers">
					<img class="ampeter right-[42%] h-[64%] z-0 animate-fade-left animate-delay-[1300ms]" src="/boxers/ampeter.webp" alt="Ampeter">
				</div>
				<div 
				id="info"
				class="absolute bottom-48 z-50 mx-auto left-1/2 -translate-x-1/2">
				<div class="flex flex-col">
				<div class="px-5 pt-3 pb-2 bg-white text-black text-center">
					<h2 class="font-boxing text-5xl ">DECEMBER 1</h2>
				</div>
				<div class="hover:contrast-150 hover:scale-105 transition inline-block text-4xl px-4 pt-1 pb-2 bg-black text-white text-center">
					<a class="font-boxing" href="https://www.linkedin.com/in/braulio-rosario-rodriguez-815101218/" target="_blank" rel="noopener noreferrer">
						<span>twitch.tv/</span><span class="text-yellow-300">ibai</span>
					</a>
				</div>
				<div class="hover:contrast-150 hover:scale-105 transition inline-block text-4xl px-1 pt-1 pb-2 bg-sky-600 text-white text-center">
					<a class="font-boxing" href="https://www.linkedin.com/in/braulio-rosario-rodriguez-815101218/" target="_blank" rel="noopener noreferrer">Buy Tickets</a>
				</div>
				</div>
			</div>
				</div>
				</div>
			</section>
		</main>

		<footer>

		</footer>
	</body>
</html>

